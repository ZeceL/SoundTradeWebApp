{
  "ConnectionStrings": {
    // Имя строки подключения может быть любым, но "DefaultConnection" - стандартное.
    // Замените параметры на ваши:
    // Server=(localdb)\\mssqllocaldb; - Локальная БД SQL Server Express LocalDB
    // Server=ваш_сервер; - Имя вашего SQL Server instance
    // Database=SoundTradeDb; - Имя базы данных (будет создана)
    // Trusted_Connection=True; - Использовать аутентификацию Windows
    // MultipleActiveResultSets=true; - Рекомендуется для EF Core
    // ИЛИ если используете SQL Server Authentication:
    // Server=ваш_сервер;Database=SoundTradeDb;User ID=ваш_логин;Password=ваш_пароль;TrustServerCertificate=True;
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=SoundTradeDb;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}